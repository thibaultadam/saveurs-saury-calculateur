{
    "phase": {
        "type": "button",
        "title": "Phase d'utilisation",
        "params": {
            "autoBuild": 0
        }
    },
    "product": {
        "type": "button",
        "title": "Produits",
        "description": "Produits utilisables dans la phase Fermentation",
        "params": {
            "buildProducts": true
        }
    },
    "unit": {
        "type": "radio",
        "title": "Unit√©"
    },
    "value": {
        "type": "input",
        "inputType": "number",
        "title": "Valeur en ${unit}",
        "description": "Entrez une valeur en ${unit}",
        "placeholder": "0",
        "defaultValue": "",
        "parse": {
            "title": {
                "unit": "${unit}"
            },
            "description": {
                "unit": "${unit}"
            }
        },
        "params": {
            "buildNext": true
        }
    },
    "gramsPerLiter": {
        "type": "input",
        "inputType": "number",
        "title": "${phase}",
        "description": "",
        "placeholder": "0",
        "defaultValue": "",
        "parse": {
            "title": {
                "phase": "${phase}"
            },
            "description": {
                "replace": {
                    "index": "unit",
                    "Hectolitres": "Entrez le nombre de grammes par Litres",
                    "Gallons": "Entrez le nombre de livres pour 1000 gallons"
                }
            }
        }
    },
    "percentage": {
        "type": "input",
        "inputType": "number",
        "title": "${phase}",
        "description": "Entrez % de bois neuf",
        "placeholder": "0",
        "defaultValue": "",
        "parse": {
            "title": {
                "phase": "${phase}"
            }
        }
    }
}